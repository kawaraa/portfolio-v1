{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "npm start"
  },
  "events": {
    "restart": "echo 'App restarted due to: '$FILENAME''"
  },
  "watch": [
    "client/*",
    "server/*",
    "app.js"
  ],
  "ext": "js,css,html"
}